<instructionCollection>
  <instructions>
    <instruction>
      <order>0</order>
      <title>DISABLE AUTOMATIC VACUUM PUMPS</title>
      <reversible>TRUE</reversible>
      <reverseTitle>ENABLE AUTOMATIC VACUUM PUMPS</reverseTitle>
      <instructionHTML>MOOC_DAVP.html</instructionHTML>
      <steps>
        <step>
          <stepControls>
            <stepControl>
              <controlType>switch</controlType>
            </stepControl>
          </stepControls>
          <answerType>FIXED</answerType>
          <answer>0</answer>
          <defaultValue>1</defaultValue>
        </step>
      </steps>
    </instruction>
    <instruction>
      <order>1</order>
      <title>ACTIVATE STELLAR TRIANGULATION MATRIX</title>
      <reversible>TRUE</reversible>
      <reverseTitle>DEACTIVATE STELLAR TRIANGULATION MATRIX</reverseTitle>
      <instructionHTML>MOOC_ASTM.html</instructionHTML>
      <steps>
        <step>
          <stepControls>
            <stepControl>
              <controlType>slider</controlType>
            </stepControl>
          </stepControls>
          <answerType>DEPENDANT</answerType>
          <dependantType>MAPPING_UP</dependantType>
          <dependantControls>
            <stepControl>
              <controlType>light</controlType>
            </stepControl>
          </dependantControls>
        </step>
        <step>
          <stepControls>
            <stepControl>
              <controlType>button</controlType>
            </stepControl>
          </stepControls>
          <answerType>FIXED</answerType>
          <answer>1</answer>
          <defaultValue>0</defaultValue>
        </step>
      </steps>
      <successTriggers>
        <successTrigger>
          <function>UpdateSystem</function>
        </successTrigger>
        <successTrigger>
          <function>UpdatePlanet</function>
        </successTrigger>
      </successTriggers>
    </instruction>
    <instruction>
      <order>2</order>
      <title>JETISON EMERGENCY PUPPIES</title>
