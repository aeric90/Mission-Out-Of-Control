          <stepControls>
            <stepControl>
              <controlType>slider</controlType>
            </stepControl>
          </stepControls>
          <answerType>RANDOM</answerType>
        </step>
        <step>
          <stepControls>
            <stepControl>
              <controlType>keypad</controlType>
            </stepControl>
          </stepControls>
          <answerType>DEPENDANT</answerType>
          <dependantType>REPLACEMENT</dependantType>
          <dependantControls>
            <stepControl>
              <controlType>meter</controlType>
            </stepControl>
          </dependantControls>
        </step>
        <step>
          <stepControls>
            <stepControl>
              <controlType>knob</controlType>
            </stepControl>
          </stepControls>
          <answerType>DEPENDANT</answerType>
          <dependantType>MAPPING_UP</dependantType>
          <dependantControls>
            <stepControl>
              <controlType>knob</controlType>
            </stepControl>
          </dependantControls>
        </step>
      </steps>
    </instruction>
